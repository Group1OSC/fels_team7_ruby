<div class="admin-content">
<h1>Listing Categories</h1>
<hr/>
<table class="zui-table zui-table-horizontal zui-table-highlight">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Action Show</th>
      <th>Action Edit</th>
      <th>Action Delete</th>
      <th>Created at</th>
      <th>Updated at</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td class=""><%= link_to 'Show', admin_category_path(category) %></td>
        <td class=""><%= link_to 'Edit', edit_admin_category_path(category) %></td>
        <td class=""><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <td><%= category.created_at %></td>
        <td><%= category.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<p class="btn btn-success"><%= link_to 'New Category', new_admin_category_path %></p>
</div>