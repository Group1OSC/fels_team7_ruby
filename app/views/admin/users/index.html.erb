<div class="admin-content">
<h1>Listing users</h1>
<hr/>
<table class="zui-table zui-table-horizontal zui-table-highlight">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Action Show</th>
      <th>Action Edit</th>
      <th>Action Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td class=""><%= link_to 'Show', admin_user_path(user) %></td>
        <td class=""><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td class=""><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<p class="btn btn-success"><%= link_to 'New User', new_admin_user_path %></p>
</div>