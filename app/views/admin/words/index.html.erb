<div class="admin-content">
<h1>Listing words</h1>
<hr/>
<table class="zui-table zui-table-horizontal zui-table-highlight">
  <thead>
    <tr>
      <th>ID</th>
      <th>Content</th>
      <th>Categories</th>
      <th>Action Show</th>
      <th>Action Edit</th>
      <th>Action Delete</th>
      <th>Created at</th>
      <th>Updated at</th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.id %></td>
        <td><%= word.content %></td>
        <td><%= word.category_id %></td>
        <td class=""><%= link_to 'Show', admin_word_path(word) %></td>
        <td class=""><%= link_to 'Edit', edit_admin_word_path(word) %></td>
        <td class=""><%= link_to 'Destroy', admin_word_path(word), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <td><%= word.created_at %></td>
        <td><%= word.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<p class="btn btn-success"><%= link_to 'New Word', new_admin_word_path %></p>
</div>